{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "build",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowJs": false,
    "baseUrl": "src",
    "lib": [
      "ES6"
    ],
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}