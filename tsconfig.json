{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "build",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowJs": false,
    "lib": [
      "ES6"
    ]
  }
}